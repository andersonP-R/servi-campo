---
import Header from "../components/ui/Header.astro";
import Layout from "../layouts/Layout.astro";
import Hero from "../sections/home-page/Hero.astro";
---

<Layout title="Servi Campo">
  <Header />
  <main class="wrapper">
    <Hero />
  </main>
</Layout>

<style>
