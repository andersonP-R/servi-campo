---
import { Image } from "astro:assets";
import { COLORS } from "../../utils";
import Nav from "../../components/ui/Nav.astro";
const { white } = COLORS;
import logo from "../../assets/logo.png";
---

<header class="header">
  <>
    <Image src={logo} alt="logo" class="logo" />
  </>
  <Nav />
</header>

<style define:vars={{ white }}>
  .header {
    position: sticky;
    top: 0px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 70px;
    width: 100%;
    background-color: var(--white);
    padding: 0px 30px;
    z-index: 20;

    @media (width < 600px) {
      padding: 0px 10px;
    }
  }

  .logo {
    width: 4rem;
    height: 4rem;
  }
</style>
