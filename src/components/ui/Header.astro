---
import { Image } from "astro:assets";
import { COLORS } from "../../utils";
import Nav from "../../components/ui/Nav.astro";
const { white } = COLORS;
import logo from "../../assets/logo.png";
---

<header class="header">
  <div>
    <Image src={logo} alt="logo" class="logo" />
  </div>
  <Nav />
</header>

<style define:vars={{ white }}>
  .header {
    position: fixed;
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 70px;
    width: 100%;
    /* background-color: ; */
    padding: 0px 20px;
    z-index: 20;
  }

  .logo {
    width: 4rem;
    height: 4rem;
  }

  @media (width > 430px) {
    .header {
      padding: 0px 40px;
    }
  }
</style>
