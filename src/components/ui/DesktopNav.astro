---
import { COLORS } from "../../utils";

const { black, dark_green } = COLORS;
---

<ul id="desktop-nav">
  <li>
    <a href="#">Inicio</a>
  </li>
  <li>
    <a href="#">Servicios</a>
  </li>
  <li>
    <a href="#">Contacto</a>
  </li>

  <li>
    <a href="#">Nosotros</a>
  </li>
</ul>

<style define:vars={{ black, dark_green }}>
  ul {
    display: flex;
    font-size: 18px;

    @media (width < 600px) {
      display: none;
    }
  }

  li {
    position: relative;
    color: var(--dark_green);
    text-decoration: none;
    list-style: none;
    padding: 3px 10px;
    margin: 0 8px;

    &:hover {
      &::after {
        transform: scaleX(1);
        transform-origin: left;
      }
    }

    &::after {
      position: absolute;
      content: "";
      top: 100%;
      left: 0;
      width: 100%;
      height: 2px;
      background-color: var(--dark_green);
      transform: scaleX(0);
      transform-origin: right;
      transition: transform 250ms;
    }
  }

  a {
    color: var(--dark_green);
    text-decoration: none;
  }
</style>
